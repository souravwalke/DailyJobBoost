# Server Configuration
PORT=3000
NODE_ENV=development
FRONTEND_URL=https://hypemeup.souravwalke.com

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/database_name

# Email Configuration
# SECURITY NOTE: Never commit actual SMTP credentials to version control
# For Gmail, enable 2FA and generate an App Password
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password
SMTP_FROM=your-email@gmail.com
EMAIL_FROM="Your App Name <noreply@yourdomain.com>"

# Security Configuration
# SECURITY NOTE: Generate strong random values for these secrets
# Use a secure method to generate these values, never commit actual secrets
JWT_SECRET=your-secure-jwt-secret-key
UNSUBSCRIBE_SECRET=your-secure-unsubscribe-key
ADMIN_PASSWORD=your-secure-admin-password

# Admin Configuration
ADMIN_SECRET_KEY=your-secure-admin-registration-key 