{
  "name": "hypemeup-backend",
  "version": "1.0.0",
  "description": "Backend for HypeMeUp - Daily motivational quotes via email",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon",
    "build": "tsc",
    "prestart": "npm run clean:modules",
    "start": "node dist/index.js",
    "typeorm": "typeorm-ts-node-commonjs -d src/config/database.ts",
    "prepare:prod": "npm run clean:full && npm run build && npm run typeorm migration:run",
    "clean:modules": "rm -rf node_modules/@upstash && npm install --no-save @upstash/qstash@latest && npm uninstall @upstash/qstash",
    "clean:full": "rm -rf node_modules dist package-lock.json && npm cache clean --force && npm install",
    "create-admin": "ts-node src/scripts/create-admin.ts",
    "create-admin-sql": "ts-node scripts/create-admin-sql.ts",
    "create-admin-typeorm": "ts-node scripts/create-admin-typeorm.ts",
    "check-admin": "ts-node src/scripts/check-admin.ts",
    "check-schema": "ts-node scripts/check-schema.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@prisma/client": "^6.4.1",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.11.20",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^6.4.14",
    "@types/pg": "^8.11.11",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "date-fns-tz": "^3.2.0",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.10",
    "pg": "^8.13.3",
    "ts-node": "^10.9.2",
    "typeorm": "^0.3.20",
    "typescript": "^5.3.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "nodemon": "^3.1.0"
  }
}
